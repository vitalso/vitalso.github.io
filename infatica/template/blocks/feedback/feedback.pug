include ../../pug/vars

<section class="feedback case">
	<div class="feedback__wrapper">
		<h2 class="feedback__headline">Get In Touch</h2>
		<p class="feedback__description">Have a question about Infatica? Get in touch with our experts to learn how we can help.</p>
	</div>

	<div class="feedback__group">
		<svg aria-hidden="true" class="feedback__image">
			<use xlink:href="uploads/sprite.svg#chat-messages"></use>
		</svg>
		<p>Mail us at: <a href="mailto:sales@infatica.io">sales@infatica.io</a> <br>or call:: <a href="tel:+12403823360">+1 240 382 3360</a></p>
	</div>

	<form class="feedback__form js-contact-form modal-content">
		<label class="feedback__form-group">
			<span class="feedback__form-label">Name</span>
			<input type="text" name="contact-name" class="feedback__input" id="contactName-1" placeholder="John Iverson">
		</label>

		<label class="feedback__form-group">
			<span class="feedback__form-label">Email address</span>
			<input type="email" name="contact-email" class="feedback__input" id="contactEmail-1" placeholder="john.email@gmail.com">
		</label>

		<label class="feedback__form-group feedback__form-group_column-1-3">
			<span class="feedback__form-label">YOUR MESSAGE</span>
			<textarea name="contact-msg" class="feedback__textarea" id="contactMsg" placeholder="Type your message here"></textarea>
		</label>

		<button type="button" class="button button_blue feedback__button js-contact-submit">Send Request</button>

		<div class="loader">
			<div class="windows8">
				<div class="wBall" id="wBall_1">
					<div class="wInnerBall"></div>
				</div>
				<div class="wBall" id="wBall_2">
					<div class="wInnerBall"></div>
				</div>
				<div class="wBall" id="wBall_3">
					<div class="wInnerBall"></div>
				</div>
				<div class="wBall" id="wBall_4">
					<div class="wInnerBall"></div>
				</div>
				<div class="wBall" id="wBall_5">
					<div class="wInnerBall"></div>
				</div>
			</div>
		</div>
	</form>
</section>