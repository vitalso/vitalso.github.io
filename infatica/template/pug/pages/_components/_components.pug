extends ../../templates/_components
block vars
	-
		title = "Компоненты"
		breadcrumbs = [
			['Главная', 'index.html'],
			[title]
		]
block content
	.components
		.case
			.components__main-title Сводная страница компонентов сборки
			.components__wrap.row
				.components__sections
					.components__section
						.components__title Кнопки (button)
						.components__desc
							p Используеются для создания кнопок и ссылок типа кнопка на сайте
							blockquote
								h4 PUG
								p button
								pre
									| button.button
								p a
								pre
									| a.button(href="")
							blockquote
								h4 Подключение
								p #[u style.sass:]
								pre
									| @import ../components/button/button
								//- p #[u default.pug:]
								//- pre
								//- 	| +script('button', 'components')
								//- p #[u common.js:]
								//- pre
								//- 	| new Button();
						.components__inner
							.button Button
							.button.--xs.--b-gray Button XS
							.button.--sm.--b-gray Button SM
							.button.--md.--b-gray Button MD
							.button.--lg.--b-gray Button LG
							.col
								.button.--md.left.--b-gray Button MD on left
								.button.--md.mid.--b-gray Button MD on middle
								.button.--md.right.--b-gray Button MD on right
					.components__section
						.components__title Поля (field)
						.components__desc
							p Используются для создания полей и ввода информации в ней.
							p Объединяет в себя теги типа input и textarea.
							table.table
								thead
									tr
										th Состояние
										th Класс
										th Действие
								tbody
									tr
										td Нормальное
										td #[div.tac —]
										td #[div.tac —]
									tr
										td Клик (фокус)
										td --focus
										td удаляется, если клик вне компонента
									tr
										td Заполнено
										td --filled
										td удаляется, если в поле ничего нет
									tr
										td Ошибка
										td --error
										td удаляется, если на поле был клик (фокус)
							table.table
								thead
									tr
										th Название
										th Описание
										th Метод
										th Вызов
								tbody
									tr
										td Добавление ошибки
										td Добавляет класс ошибки при вызове метода
										td addError(nodeElement: element, text: message)
										td Field.addError(element, 'message');
							blockquote
								h4 Использование
								pre
									| .field
									|   .field__title
									|   .field__wrap
									|     input.field__area(type="text" name="" placeholder="")
							blockquote
								h4 Подключение
								p #[u style.sass:]
								pre
									| @import ../components/field/field
								p #[u default.pug:]
								pre
									| +script('field', 'components')
								p #[u common.js:]
								pre
									| // Fields
									| let fields = document.querySelectorAll('.field');
									| 
									| if (fields) {
									|   fields.forEach((field)=>{
									|     new Field(field);
									|   });
									| }
						.components__inner
							.field.--xs.--b-gray
								.field__title Input XS
								.field__wrap
									input.field__area(name="phone" placeholder="Введите телефон")

							.field.--xs.--b-gray
								.field__title Textarea XS
								.field__wrap
									textarea.field__area(name="comment" placeholder="Введите ваш комментарий")

							.field.--sm.--b-gray
								.field__title Input SM
								.field__wrap
									input.field__area(name="phone" placeholder="Введите телефон")

							.field.--sm.--b-gray
								.field__title Textarea SM
								.field__wrap
									textarea.field__area(name="comment" placeholder="Введите ваш комментарий")

							.field.--md.--b-gray
								.field__title Input MD
								.field__wrap
									input.field__area(name="phone" placeholder="Введите телефон")

							.field.--md.--b-gray
								.field__title Textarea MD
								.field__wrap
									textarea.field__area(name="comment" placeholder="Введите ваш комментарий")

							.field.--lg.--b-gray
								.field__title Input LG
								.field__wrap
									input.field__area(name="phone" placeholder="Введите телефон")

							.field.--lg.--b-gray
								.field__title Textarea LG
								.field__wrap
									textarea.field__area(name="comment" placeholder="Введите ваш комментарий")

					.components__section
