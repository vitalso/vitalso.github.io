										td
											ul
												li удаляется, при повтроном клике или нажатии вне элемента
									tr
										td Выбан элемент
										td --selected
										td
											ul
												li удаляется, при клике на сосоедний элемент списка
									tr
										td Скрыт элемент
										td --hidden
										td
											ul
												li удаляется, при клике вводе валидных данных в поле

							blockquote
								h4 Использование
								pre
									| .select(data-placeholder="")
									|   .select__wrap
									|     .select__area
									|       .select__title
									|       .select__icon
									|     .select__drop
									|       select.select__parse(name="")
									|         option(value="") Option 1

							blockquote
								h4 Подключение
								p #[u style.sass:]
								pre
									| @import ../components/select/select
								p #[u default.pug:]
								pre
									| +script('select', 'components')
								p #[u common.js:]
								pre
									| var selects = document.querySelectorAll('.select');
									| if (selects) {
									|   selects.forEach(select => {
									|     new Select(select);
									|    });
									|
									|   document.addEventListener('click', (event)=>{
									|     let openSelects = document.querySelectorAll('.select.--open');
									|
									|     if (!event.target.closest('.select') && openSelects) {
									|       openSelects.forEach((select)=> {
									|         select.classList.remove(Select.classOpen);
									|       });
									|     }
									|   });
									| }
						.components__inner
							.select.--md.--b-gray(data-placeholder="Placeholder")
								.select__wrap
									.select__area
										.select__title
										.select__icon
									.select__drop
										select.select__parse(name="select-1")
											option(value="Option 1") Option 1
											option(value="Option 2") Option 2
											option(value="Option 3") Option 3

							.select.--md.--b-gray(data-placeholder="Placeholder")
								.select__wrap
									.select__area
										.select__title
										.select__icon
									.select__drop
										select.select__parse(name="select-2")
											option(value="Option 1") Option 1
											option(value="Option 2" selected="selected") Option 2
											option(value="Option 3") Option 3

							.select.--md.--b-gray
								.select__wrap
									.select__area
										.select__title
										.select__icon
									.select__drop
										select.select__parse(name="select-3")
											option(value="Option 1") Option 1
											option(value="Option 2") Option 2
											option(value="Option 3") Option 3

							.select.--md.--b-gray
								.select__wrap
									.select__area
										.select__title
										.select__icon
									.select__drop
										.field.--md
											.field__wrap
												input.field__area(name="phone" placeholder="Поиск...")
										select.select__parse(name="select-4")
											option(value="Option 1") Option 1
											option(value="Option 2") Option 2
											option(value="Option 3") Option 3

