	//- systems page styles
	style.
		.components {
			font-family: "Tahoma", 'sans-serif';
			font-size: 14px;
			padding-top: 20px;
			padding-bottom: 20px;
		}

		.components__sections {
			width: 80%;
		}

		.components__main-title {
			font-size: 26px;
			line-height: 32px;
			margin-bottom: -20px;
		}

		.components__section {
			padding-top: 40px;
			padding-bottom: 40px;
			border-bottom: 1px solid #eee;
		}
		.components__section:last-of-type {
			border-bottom: none;
		}

		.components__title {
			font-size: 20px;
			font-weight: 700;
			line-height: 26px;
			margin-bottom: 10px;
		}
		.components__inner {
			margin-top: 20px;
		}
		.components__desc p{
			margin-bottom: 10px;
		}
		.components__desc blockquote {
			padding: 15px;
			background-color: #eee;
		}
		.components__desc blockquote h4 {
			display: block;
			font-weight: 700;
			margin-bottom: 5px;
		}
		.components__desc blockquote i, .components__desc blockquote pre {
			font-family: "Courier New";
		}
		.components__desc blockquote i {
			margin-left: 10px;
		}
		.components__desc blockquote p + pre {
			margin-top: -5px;
		}
		.components__desc blockquote pre {
			font-size: 14px;
			margin-bottom: 10px;
			padding-left: 20px;
		}
		.components__desc blockquote pre:last-child {
			margin-bottom: 0;
		}
		.components__desc blockquote u {
			text-decoration: underline;
		}
		.components__desc .table {
			width: 100%;
			border-collapse: collapse;
			text-align: center;
			margin-bottom: 10px;
		}
		.components__desc .table th {
			padding: 5px 10px;
			background-color: #eee;
		}
		.components__desc .table td {
			padding: 5px 10px;
			min-width: 200px;
			border: 1px solid #eee;
		}
		.components__desc .table td {
			text-align: left;
		}
		.components__inner .button{
			margin-bottom: 10px;
		}

		.components__inner .field{
			margin-bottom: 20px;
		}
		.components__inner .checks .check {
			min-width: 140px;
			margin-right: 12px;
		}

		.components__inner .checks{
			margin-bottom: 15px;
		}
		.components__inner .select {
			margin-bottom: 15px;
		}

		.components__inner .select .field {
			margin-bottom: 0;
		}

		.components__inner .modal {
			display: none;
		}

		.components__aside {
			width: 20%;
			padding-left: 20px;
		}

		.components__nav {
			position: sticky;
			top: 20px;
			left: 0;
		}

		.components__nav ul {
			flex-direction: column;
		}
