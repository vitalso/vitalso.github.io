								thead
									tr
										th Состояние
										th Класс
										th Действие
								tbody
									tr
										td Нормальное
										td #[div.tac —]
										td #[div.tac —]
									tr
										td Клик
										td --checked
										td
											ul
												li удаляется, при повтроном клике, если это input type="checkbox" 
												li удаляется, при клике на элемент, если это input type="radio" 
									tr
										td Ошибка
										td --error
										td #[div.tac —]
							table.table
								thead
									tr
										th Название
										th Описание
										th Метод
										th Вызов
								tbody
									tr
										td Добавление ошибки
										td Добавляет класс ошибки при вызове метода
										td addError(nodeElement: element, text: message)
										td Check.addError(element, 'message');

							blockquote
								h4 Использование
								pre
									| .check.--checkbox
									|   input.check__input(type="checkbox" name="" value="")
									|   .check__box
									|   .check__wrap
									|     input.check__title
									|
									| .check.--radio
									|   input.check__input(type="radio" name="" value="")
									|   .check__box
									|   .check__wrap
									|     input.check__title
									|
									| .check.--toggle(data-true="checked" data-false="not checked")
									|   input.check__input(type="checkbox" name="" value="")
									|   .check__box
									|   .check__wrap
									|     input.check__title

							blockquote
								h4 Подключение
								p #[u style.sass:]
								pre
									| @import ../components/check/check
								p #[u default.pug:]
								pre
									| +script('check', 'components')
								p #[u common.js:]
								pre
									| // Checks
									| let checks = document.querySelectorAll('.check');
									| 
									| if (checks) {
									|   fields.forEach((check)=>{
									|     new Check(check);
									|   });
									| }
						.components__inner
							.checks
								.check.--checkbox.--md.--b-gray
									input.check__input(type="checkbox" name="check-group" value="check-group-1" checked="checked")
									.check__box
									.check__wrap
										.check__title Checkbox 1

								.check.--checkbox.--md.--b-gray
									input.check__input(type="checkbox" name="check-group" value="check-group-2")
									.check__box
									.check__wrap
										.check__title Checkbox 2

								.check.--checkbox.--md.--b-gray
									input.check__input(type="checkbox" name="check-group" value="check-group-3")
									.check__box
									.check__wrap
										.check__title Checkbox 3

							.checks
								.check.--radio.--md.--b-gray
									input.check__input(type="radio" name="radio-group" value="check-group-1" checked="checked")
									.check__box
									.check__wrap
										.check__title Radio 1

								.check.--radio.--md.--b-gray
									input.check__input(type="radio" name="radio-group" value="check-group-2")
									.check__box
									.check__wrap
										.check__title Radio 2

								.check.--radio.--md.--b-gray
									input.check__input(type="radio" name="radio-group" value="check-group-3")
									.check__box
									.check__wrap
										.check__title Radio 3

							.checks
								.check.--toggle.--md.--b-gray(data-true="checked" data-false="not checked")
									input.check__input(type="checkbox" name="toggle-group" value="toggle-group-1" checked="checked")
									.check__box
									.check__wrap
										.check__title Toggle 1
										.check__value

								.check.--toggle.--md.--b-gray(data-true="checked" data-false="not checked")
									input.check__input(type="checkbox" name="toggle-group" value="toggle-group-2")
									.check__box
									.check__wrap
										.check__title Toggle 2
										.check__value

								.check.--toggle.--md.--b-gray(data-true="checked" data-false="not checked")
									input.check__input(type="checkbox" name="toggle-group" value="toggle-group-3")
									.check__box
									.check__wrap
										.check__title Toggle 3
										.check__value

					.components__section
						.components__title Селект (select)
						.components__desc
							p Используются для формирования выпадающих списоков.
